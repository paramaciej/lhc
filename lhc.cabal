executable latc
  main-is:              Main.hs
  other-modules:
    ErrM
    AbsLatte
    LexLatte
    ParLatte

    Asm.Generator
    Asm.RegAlloc
    Quattro.Alive
    Quattro.Generator
    Quattro.Types
    Quattro.Validator
