  build-depends:        base >= 4.7 && < 5,
                        array,
                        mtl,
                        containers,
                        lens,
                        ansi-terminal
  hs-source-dirs:       src
  default-language:     Haskell2010

executable latc_x86
  main-is:              MainX86.hs
  ghc-options:          -main-is MainX86
  build-depends:        base >= 4.7 && < 5
  hs-source-dirs:       src
  default-language:     Haskell2010